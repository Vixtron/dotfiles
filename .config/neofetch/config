# Neofetch config file
# https://github.com/dylanaraps/neofetch

print_info() {
    info title
    info underline

    info "OS" distro
    info "KL" kernel
    info "UP" uptime
    info "PK" packages
    info "SH" shell
    info "WM" wm
    info "TR" term
    info "CPU" cpu
    info "GPU" gpu
    info "Mem" memory
    info "Disk" disk
    info "Font" font

    info line_break
    info cols
    info line_break
}

kernel_shorthand="on"
